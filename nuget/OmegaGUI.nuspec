<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
    <metadata>
        <id>OmegaGUI</id>
        <version>$version$$VersionSuffix$</version>
        <authors>Bastian Eicher</authors>
        <licenseUrl>https://github.com/omegaengine/omegaengine/wiki/License</licenseUrl>
        <projectUrl>https://github.com/omegaengine/omegaengine/wiki/OmegaGUI</projectUrl>
        <iconUrl>https://raw.githubusercontent.com/omegaengine/omegaengine/master/icon-omega.png</iconUrl>
        <description>OmegaGUI is a skinable GUI toolkit for the OmegaEngine with an XML file format und Lua scripting.
The AlphaEditor contains a WYSIWYG editor for the toolkit.</description>
        <summary>Skinable GUI toolkit for the OmegaEngine</summary>
        <dependencies>
            <dependency id="OmegaEngine.Backend" version="[$version$$VersionSuffix$]" />
        </dependencies>
        <references>
            <reference file="OmegaGUI.dll" />
        </references>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
    </metadata>
    <files>
        <file src="..\artifacts\Release\OmegaGUI.*" target="lib\net20" />

        <!-- Satellite assemblies (translations) -->
        <file src="..\artifacts\Release\**\OmegaGUI.resources.dll" target="lib\net20" />

        <!-- Source code -->
        <file src="..\src\OmegaGUI\**\*.cs" target="src" />
    </files>
</package>
